:root{--max-width: 100%;--header-height: 75px}@media(min-width:576px){:root{--max-width: 540px}}@media(min-width:768px){:root{--max-width: 720px}}@media(min-width:992px){:root{--max-width: 960px}}@media(min-width:1200px){:root{--max-width: 1140px}}*{box-sizing:border-box}body{font-size:14px;font-weight:300;font-family:-apple-system,BlinkMacSystemFont,segoe ui,Roboto,helvetica neue,Arial,sans-serif;padding:var(--header-height) 0 0;margin:0}header{position:fixed;top:0;background:rgba(255,255,255,.9);width:100%;padding:0 calc( (100% - var(--max-width))/2 + 15px);border-bottom:1px solid #e4e4e4}.top-menu{list-style:none}