:root{--max-width: 100%;--header-height: 60px;--theme-color-rgb: 0, 211, 249;--theme-color: rgba(var(--theme-color-rgb), 1.0);--content-padding: 15px}@media(min-width:576px){:root{--max-width: 540px}}@media(min-width:768px){:root{--max-width: 720px}}@media(min-width:992px){:root{--header-height: 75px;--max-width: 960px}}@media(min-width:1200px){:root{--max-width: 1140px}}body>section:nth-child(2n){background:#f6f6f6}body>section{padding:40px 0;width:100%;padding-left:calc( (100% - var(--max-width))/2 + var(--content-padding));padding-right:calc( (100% - var(--max-width))/2 + var(--content-padding))}body>section h1,body>section h2{text-align:center}.intro{display:grid;grid-template-columns:1fr 4fr;grid-column-gap:20px;grid-row-gap:10px;grid-template-areas:"pic title" "pic subtitle" "pic desc"}.intro img{grid-area:pic;border:1px solid #e4e4e4;background:#e4e4e4;width:100%;height:auto;border-radius:5px}.intro p{grid-area:desc}.intro h1{grid-area:title}.intro .subtitle{grid-area:subtitle}@media(max-width:1200px){.intro{grid-template-columns:1.5fr 3fr}}@media(min-width:993px){.intro h1,.intro .subtitle{padding:0;margin:0}}@media(max-width:992px){.intro{display:block}.intro *{margin:20px 0}.intro img{margin:0 20px 0 0;width:33%;max-width:200px;float:left}}.experience .adobe{float:right;margin:20px 0 40px}.experience .item{display:flex;flex-direction:column}.experience .item svg{align-self:center}.experience .item span{align-self:flex-end;flex:1;display:flex;align-items:flex-end}.experience .item span a:first-child{margin-right:10px}