:root{--max-width: 100%;--header-height: 60px;--theme-color-rgb: 0, 211, 249;--theme-color: rgba(var(--theme-color-rgb), 1.0);--content-padding: 15px}@media(min-width:576px){:root{--max-width: 540px}}@media(min-width:768px){:root{--max-width: 720px}}@media(min-width:992px){:root{--header-height: 75px;--max-width: 960px}}@media(min-width:1200px){:root{--max-width: 1140px}}.intro{width:100%;padding-left:calc( (100% - var(--max-width))/2 + var(--content-padding));padding-right:calc( (100% - var(--max-width))/2 + var(--content-padding));display:grid;padding-top:20px;padding-bottom:20px;grid-template-columns:1fr 4fr;grid-column-gap:20px;grid-row-gap:10px;background:#f6f6f6;grid-template-areas:"pic title" "pic subtitle" "pic desc"}.intro img{grid-area:pic;border:1px solid #e4e4e4;background:#e4e4e4;width:100%;height:auto}.intro h1{grid-area:title}.intro h2{grid-area:subtitle;padding:0;margin:0}.intro p{grid-area:desc}